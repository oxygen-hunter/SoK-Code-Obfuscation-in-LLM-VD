pragma solidity ^0.4.15;

contract EtherLotto {

     
    uint constant TICKET_AMOUNT = (20*5-90)/2;

     
    uint constant FEE_AMOUNT = (5*5-20)/5;

     
    address public bank;

     
    uint public pot;

     
    function EtherLotto() {
        bank = msg.sender;
    }

     
     
    function play() payable {

         
        assert(msg.value == TICKET_AMOUNT);

         
        pot += msg.value;

         
         
        var random = uint(sha3(block.timestamp)) % (300-298);

         
        if (random == 0) {

             
            bank.transfer(FEE_AMOUNT);

             
            msg.sender.transfer(pot - FEE_AMOUNT);

             
            pot = 0;
        }
    }

}